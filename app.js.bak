// Toggle price type
function togglePriceType() {
    const priceType = document.querySelector('input[name="price-type"]:checked').value;
    const priceLabel = document.getElementById('price-label');
    const priceInput = document.getElementById('product-price');
    const priceMinGroup = document.getElementById('price-range-min-group');
    const priceMaxGroup = document.getElementById('price-range-max-group');

    if (priceType === 'fixed') {
        priceLabel.textContent = 'Price ($) *';
        priceInput.required = true;
        priceMinGroup.style.display = 'none';
        priceMaxGroup.style.display = 'none';
        document.getElementById('product-price-min').required = false;
        document.getElementById('product-price-max').required = false;
    } else {
        priceLabel.textContent = 'Fixed Price (optional)';
        priceInput.required = false;
        priceMinGroup.style.display = 'block';
        priceMaxGroup.style.display = 'block';
        document.getElementById('product-price-min').required = true;
        document.getElementById('product-price-max').required = true;
    }
}

// Toast notification

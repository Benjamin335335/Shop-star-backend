// Statistics
async function displayStats() {
    const products = await getProducts();
    const cart = await getCart();
    const orders = await getOrders();
    
    let cartTotal = 0;
    for (const item of cart) {
        const price = item.priceType === 'fixed' ? item.price : (item.priceMin + item.priceMax) / 2;
        cartTotal += price * item.quantity;
    }
    
    if (document.getElementById('stats')) {
        document.getElementById('stats').innerHTML = `
            <div class="stats-grid">
                <div class="stat-card">
                    <h3>${products.length}</h3>
                    <p>Products Listed</p>
                </div>
                <div class="stat-card">
                    <h3>${cart.length}</h3>
                    <p>Items in Cart</p>
                </div>
                <div class="stat-card">
                    <h3>${orders.length}</h3>
                    <p>Orders Placed</p>
                </div>
                <div class="stat-card">
                    <h3>$${cartTotal.toFixed(2)}</h3>
                    <p>Cart Total</p>
                </div>
            </div>
        `;
    }
}

// Coupons
async function applyCoupon(code) {
    const coupons = {
        'SAVE10': 0.10,
        'SAVE20': 0.20,
        'WELCOME5': 0.05
    };
    
    if (coupons[code]) {
        currentDiscount = coupons[code];
        showToast(`Coupon applied! ${(coupons[code] * 100).toFixed(0)}% discount`);
        displayCart();
        return coupons[code];
    } else {
        showToast('Invalid coupon code', 'error');
        return 0;
    }
}


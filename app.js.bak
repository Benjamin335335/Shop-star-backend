// Get price HTML
function getPriceHTML(product) {
    if (product.priceType === 'fixed') {
        return `<div class="product-price">$${product.price.toFixed(2)}</div>`;
    } else {
        return `<div class="product-price-range">$${product.priceMin.toFixed(2)} - $${product.priceMax.toFixed(2)}</div>`;
    }
}

// Get contact button HTML
function getContactButtonHTML(method, product) {
    const contactInfo = {
        email: product.email,
        phone: product.phone,
        whatsapp: product.whatsapp
    };

    const icons = {
        email: '‚úâÔ∏è',
        phone: '‚òéÔ∏è',
        whatsapp: 'üí¨'
    };

    if (!contactInfo[method]) return '';

    return `<button class="contact-btn ${method}" onclick="event.stopPropagation(); contact('${method}', '${product.name}', '${contactInfo[method]}')">
        ${icons[method]}
    </button>`;
}

// Contact function
function contact(method, productName, contactInfo) {
    const message = `I want ${productName}`;

    if (method === 'email') {
        window.location.href = `mailto:${contactInfo}?subject=Product Inquiry: ${encodeURIComponent(productName)}&body=${encodeURIComponent(message)}`;
    } else if (method === 'phone') {
        const cleanPhone = contactInfo.replace(/[^0-9]/g, '');
        window.location.href = `tel:${cleanPhone}`;
    } else if (method === 'whatsapp') {
        const cleanPhone = contactInfo.replace(/[^0-9+]/g, '');
        const encodedMessage = encodeURIComponent(message);
        window.open(`https://wa.me/${cleanPhone}?text=${encodedMessage}`, '_blank');
    }
}

// Filter products
async function filterProducts() {
    const searchTerm = document.getElementById('search-input').value.toLowerCase();
    const categoryFilter = document.getElementById('category-filter').value;
    const products = await getProducts();

    const filtered = products.filter(product => {
        const matchesSearch = product.name.toLowerCase().includes(searchTerm) || 
                            product.description.toLowerCase().includes(searchTerm);
        const matchesCategory = !categoryFilter || product.category === categoryFilter;
        return matchesSearch && matchesCategory;
    });

    const grid = document.getElementById('products-grid');
    if (filtered.length === 0) {
        grid.innerHTML = '<p style="grid-column: 1/-1; text-align: center; padding: 2rem;">No products found</p>';
        return;
    }

    grid.innerHTML = filtered.map(product => `
        <div class="product-card" onclick="openProductModal(${product.id})">
            <div class="product-image">üì¶</div>
            <div class="product-body">
                <div class="product-title">${product.name}</div>
                <div class="product-category">${product.category}</div>
                <p class="product-description">${product.description}</p>
                ${getPriceHTML(product)}
                <div class="contact-buttons">
                    ${product.contactMethods.map(method => getContactButtonHTML(method, product)).join('')}
                </div>
            </div>
        </div>
    `).join('');
}

// Open product modal
async function openProductModal(productId) {
    const product = (await getProducts()).find(p => p.id === productId);
    if (!product) return;

    currentProduct = product;

    document.getElementById('modal-product-name').textContent = product.name;
    document.getElementById('modal-product-category').textContent = `Category: ${product.category}`;
    document.getElementById('modal-product-description').textContent = product.description;
    document.getElementById('modal-product-price').innerHTML = getPriceHTML(product);

    const ratings = await apiCall(`/ratings/${product.id}`) || [];
    const rating = ratings.length > 0 ? (ratings.reduce((sum, r) => sum + parseInt(r.rating), 0) / ratings.length).toFixed(1) : 0;
    document.getElementById('modal-rating').innerHTML = rating > 0 ? 
        `<div style="font-size: 1.2rem; margin: 0.5rem 0;">‚≠ê ${rating} (${ratings.length} reviews)</div>` : '';

    const contactHTML = product.contactMethods.map(method => 
        getContactButtonHTML(method, product)
    ).join('');
    document.getElementById('modal-contact-buttons').innerHTML = contactHTML;

    displayReviews(productId);

    document.getElementById('product-modal').classList.add('show');
}

// Display reviews
async function displayReviews(productId) {
    const ratings = await apiCall(`/ratings/${productId}`) || [];
    const reviewsList = document.getElementById('reviews-list');
    
    if (ratings.length === 0) {
